<Window x:Class="DocumentSavingProject.View.DBConnectionView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocumentSavingProject.View"
        xmlns:converters="clr-namespace:DocumentSavingProject.Converters"
        mc:Ignorable="d"
        Title="Database Connection" Height="500" Width="800"
        WindowStartupLocation="Manual"
        Background="#E3F2FD">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007ACC" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="2">
                            <Border Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center" />
                            </Border>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E" />
                    <Setter Property="Cursor" Value="Hand" />

                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#003F73" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Image Source="pack://application:,,,/Images/back.png"
           Width="30" Height="30" 
           HorizontalAlignment="Left" VerticalAlignment="Top"
           Margin="10" 
           Cursor="Hand"
           MouseLeftButtonUp="OnBackButtonClick"
           Grid.Row="0"
               Panel.ZIndex="100"/>
        <Border Background="White" CornerRadius="5" Padding="20" BorderBrush="#007ACC" BorderThickness="2" Panel.ZIndex="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Text="Database Connection" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#007ACC" 
                           Margin="0,0,0,20" 
                           HorizontalAlignment="Center" 
                           Grid.Row="0" />

                <!-- Input Fields -->
                <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Width="400">
                    <TextBlock Text="Server Name:" FontWeight="Bold" Margin="0,0,0,5" />
                    <TextBox Text="{Binding ServerName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15" />

                    <TextBlock Text="Database Name:" FontWeight="Bold" Margin="0,0,0,5" />
                    <TextBox Text="{Binding DatabaseName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15" />

                    <TextBlock Text="Username:" FontWeight="Bold" Margin="0,0,0,5" />
                    <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15" />

                    <TextBlock Text="Password:" FontWeight="Bold" Margin="0,0,0,5" />
                    <PasswordBox PasswordChanged="PasswordBox_PasswordChanged" Margin="0,0,0,15" />

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,15">
                        <TextBlock Text="Trust Server Certificate:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0" />
                        <CheckBox IsChecked="{Binding TrustServerCertificate}" />
                    </StackPanel>
                </StackPanel>

                <!-- Test Connection Button and Loader -->
                <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                    <!-- Test Connection Button -->
                    <Button Content="Connect" 
            Command="{Binding TestConnectionCommand}" 
            Style="{StaticResource ModernButtonStyle}" 
            Background="#28A745" 
            Width="200"
            Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}" />

                    <!-- Loader -->
                    <ProgressBar IsIndeterminate="True"
                 Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                 Height="20" Width="200" Margin="0,10,0,0" />

                    <!-- Status Message -->
                    <TextBlock Text="{Binding StatusMessage}" 
               Foreground="Red" 
               FontWeight="Bold" 
               HorizontalAlignment="Center" 
               Margin="0,10,0,0" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
