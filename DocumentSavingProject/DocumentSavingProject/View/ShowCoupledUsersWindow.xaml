<Window x:Class="DocumentSavingProject.View.ShowCoupledUsersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Show Coupled Users" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#FFFFFF">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Left Column: Files -->
        <Border BorderBrush="#007ACC" BorderThickness="1" CornerRadius="5" Margin="10">
            <ListBox ItemsSource="{Binding FewUsersCollectionKeys}" 
                     DisplayMemberPath="FileName"
                     SelectedItem="{Binding SelectedFile, Mode=TwoWay}" 
                     Margin="10" />
        </Border>

        <!-- Right Column: Users -->
        <Border Grid.Column="1" BorderBrush="#007ACC" BorderThickness="1" CornerRadius="5" Margin="10">
            <ListBox ItemsSource="{Binding SelectedFileUsers}" 
                     Margin="10">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" />
                            <TextBlock Text="{Binding SurName}" />
                            <TextBlock Text="{Binding PROGRESSIVO}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
    </Grid>
</Window>
